[Unit]
Description = /media/mergerfs MergerFS mount
PartOf=gmedia.service
After=gmedia-rclone.service
RequiresMountsFor=/media/xfiles/mergerfs

[Mount]
What = /media/xfiles/mergerfs/local:/media/xfiles/mergerfs/remote
Where = /media/xfiles/media
Type = fuse.mergerfs
Options = defaults,sync_read,nonempty,allow_other,category.action=all,category.create=ff

[Install]
WantedBy=gmedia.service
